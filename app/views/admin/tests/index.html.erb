<h1>Test</h1>

<table>
    <tr>
      <th>Tests</th>
      <th>Questions count</th>
    </tr>
  <% @tests.each do |test| %>
    <tr>
        <td><%= test.title %></td>
        <td><%= test.questions.count %></td>

        <td><%=link_to 'Show', admin_test_questions_path(test, test.questions) %></td>
      <td><%=link_to 'Edit', edit_admin_test_path(test) %></td>
      <td><%=link_to 'Delete',
        tests_path(test),
        method: :delete,
        data: { confirm: 'Are you sure?' } %>

      </td>
      <td><%=button_to 'Start', start_test_path(test) %></td>
  <% end %>
    </tr>
</table>
